{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "create-react-app": "^3.3.0",
    "express": "^4.17.1",
    "extract-css-chunks-webpack-plugin": "^4.7.4",
    "file-system": "^2.2.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm-run-all sh:clean server:build client:build sh:move-client",
    "sh:move-client": "mv ./build ./deploy/client",
    "sh:clean": "rm -rf ./deploy/*",
    "client:build": "react-scripts build",
    "client:test": ".react-scripts test",
    "client:eject": "react-scripts eject",
    "server:build": "NODE_ENV=production webpack --config ./server/webpack.server.js --mode=production",
    "server-dev:build": "NODE_ENV=development webpack --config ./server/webpack.server.js --mode=development -w",
    "server-dev:start": "nodemon ./dev-server/index.js",
    "server-dev": "npm-run-all --parallel client:build server-dev:*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "style-loader": "^1.1.3",
    "webpack": "4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-node-externals": "^1.7.2"
  }
}
